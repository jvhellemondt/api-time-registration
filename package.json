{
  "name": "time-registration",
  "type": "module",
  "version": "0.0.0",
  "module": "src/modules/TimeRegistration.module.ts",
  "scripts": {
    "dev": "bun --hot --watch src/main.ts",
    "build": "bun build src/main.ts --splitting --outdir=./dist --target=bun --tsconfig=tsconfig.build.json",
    "start": "NODE_ENV=production bun dist/main.js",
    "prepare": "husky",
    "commit": "cz",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "NODE_ENV=development vitest",
    "test:ui": "NODE_ENV=development vitest --watch --coverage --ui",
    "test:watch": "NODE_ENV=development vitest --coverage --watch",
    "coverage": "NODE_ENV=development vitest --coverage",
    "test:integration": "NODE_ENV=test vitest --config vitest.integration.config.ts",
    "test:properties": "NODE_ENV=development vitest --config vitest.property-based.config.ts",
    "tsc": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "release": "release-it",
		"docker:start": "docker compose -f docker/docker-compose.yaml up -d",
		"docker:down": "docker compose -f docker/docker-compose.yaml down",
		"docker:destroy": "docker compose -f docker/docker-compose.yaml down -v"

	},
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@arts-n-crafts/ts": "^3.13.2",
    "date-fns": "^4.1.0",
    "hono": "^4.9.8",
    "mongodb": "^6.20.0",
    "oxide.ts": "^1.1.0",
    "ts-case-convert": "^2.1.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@release-it/bumper": "^7.0.5",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.22",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "changelogen": "^0.6.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "fast-check": "^4.3.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "release-it": "^19.0.5",
    "release-it-changelogen": "^0.1.0",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "bun": {
    "target": "esnext"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
